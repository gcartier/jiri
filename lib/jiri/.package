(package jiri
  
  (title "Jiri")
  (description "Jazz Remote Installer")
  (authors "Guillaume Cartier")
  (stage alpha)
  (root "src")
  (products (jiri (title "Jiri")
                  (product jiri.product)
                  (update jiri.appl
                          jiri.base
                          jiri.connection
                          jiri.debug
                          jiri.font
                          jiri.git
                          jiri.git-interface
                          (cond
                            (windows jiri.install))
                          (cond
                            (windows jiri.launch))
                          jiri.manage
                          jiri.manager
                          jiri.pane
                          jiri.platform
                          jiri.product
                          jiri.run
                          jiri.section
                          jiri.settings
                          (cond
                            (windows jiri.setup))
                          jiri.splash
                          jiri.structure
                          jiri.task
                          (cond
                            (windows jiri.uninstall))
                          (cond
                            (mac jiri.update))
                          jiri.view
                          jiri.window
                          jiri.work)
                  (dependencies jazz
                                ;jazz.catalog
                                ;jazz.debuggee
                                ;jazz.debuggee.jazz
                                ;jazz.designer
                                ;jazz.editor.jazz
                                ;jazz.git
                                ;jazz.graphic
                                ;jazz.io
                                ;jazz.jml
                                ;jazz.jrm
                                ;jazz.library
                                ;jazz.media
                                ;jazz.network
                                ;jazz.platform
                                ;jazz.profile
                                ;jazz.system
                                ;jazz.ui
                                ;srfi-19
                                ;; to run under the debugger
                                ;profiler
                                ;jazz.debugger.jazz
                                )))
  (project ".project"))
