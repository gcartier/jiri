(package jiri
  
  (title "Jiri")
  (description "Jazz Remote Installer")
  (authors "Guillaume Cartier")
  (stage alpha)
  (root "src")
  (products (jiri (title "Jiri")
                  (product jiri.product)
                  (update jiri
                          jiri.appl
                          jiri.base
                          jiri.connection
                          jiri.debug
                          jiri.font
                          jiri.git
                          jiri.git-interface
                          (cond
                            (windows jiri.install))
                          (cond
                            (windows jiri.launch))
                          jiri.manage
                          jiri.manager
                          jiri.monitor
                          jiri.pane
                          jiri.platform
                          jiri.process
                          jiri.product
                          jiri.run
                          jiri.section
                          jiri.settings
                          (cond
                            (windows jiri.setup))
                          jiri.splash
                          jiri.structure
                          jiri.task
                          (cond
                            (windows jiri.uninstall))
                          (cond
                            (mac jiri.update))
                          jiri.view
                          jiri.window
                          jiri.work)
                  (dependencies jazz
                                jazz.action
                                jazz.application
                                jazz.clipboard
                                jazz.crash
                                jazz.document
                                jazz.event
                                jazz.feedback
                                jazz.fonts
                                jazz.foreign
                                jazz.git
                                jazz.graphic
                                jazz.handler
                                jazz.history
                                jazz.io
                                jazz.jml
                                jazz.jrm
                                jazz.layout
                                jazz.locale
                                jazz.math
                                jazz.media
                                jazz.menu
                                jazz.platform
                                jazz.preferences
                                jazz.print
                                jazz.product
                                jazz.profile
                                jazz.reference
                                jazz.resource
                                jazz.runtime
                                jazz.settings
                                jazz.syntax
                                jazz.text
                                jazz.time
                                jazz.tree
                                jazz.ui
                                jazz.undoer
                                jazz.version
                                jazz.view
                                jazz.window
                                jazz.workspace
                                contrib.irregex
                                jazz.debuggee
                                jazz.snapshot
                                jazz.template)))
  (project ".project"))
