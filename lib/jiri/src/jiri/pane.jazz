(module jiri.pane jazz


(import (jazz.graphic)
        (jazz.ui)
        (jiri.settings)
        (jiri.structure)
        (jiri.window)
        (jiri.work))


(class Jiri-Pane extends View
  
  
  @EXPERIMENT
  (method override (key-press evt)
    (case (get-key~ evt)
      ((#\v) (explore-views~ (jazz.debuggee:current-view-debugger)))
      ((#\t) (invalidate-view~ progress-view))))
  
  
  (method override (return-press evt)
    (when (and return-callback (not work-in-progress?))
      (return-callback)))
  
  
  (method override (escape-press evt)
    (quit-callback))))
