;;;
;;;; Abort
;;;


(definition abort-requested
  #f)


(definition public (set-abort-requested abort)
  (set! abort-requested abort))


(definition protected (safe-abort-point cleanup)
  (and abort-requested
       (begin
         (cleanup)
         (when (not (work-in-progress?))
           (abort-requested))
         #t))))
